<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>View and filter your ASP.net core log events right from your app </Description>
    <Authors>Alaa Masoud</Authors>

    <PackageId>Sejil</PackageId>
    <PackageTags>sejil;logging;structured</PackageTags>
    <PackageIconUrl></PackageIconUrl>
    <PackageProjectUrl></PackageProjectUrl>
    <PackageLicenseUrl>http://www.apache.org/licenses/LICENSE-2.0</PackageLicenseUrl>

    <TargetFramework>netstandard2.0</TargetFramework>
    <VersionPrefix>1.0.0-beta1</VersionPrefix>
    <AssemblyName>Sejil</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.0.0-*" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="2.0.0-*" />
    <PackageReference Include="Microsoft.AspNetCore.Routing" Version="2.0.0-*" />
    <PackageReference Include="Microsoft.AspNetCore.Hosting" Version="2.0.0-*" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="2.0.0-*" />
    <PackageReference Include="Serilog" Version="2.5.1-*" />
    <PackageReference Include="Serilog.Sinks.PeriodicBatching" Version="2.1.1" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="2.0.0-*" />
    <PackageReference Include="Dapper" Version="1.50.2" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="index.html" />
    <EmbeddedResource Include="db.sql" />
  </ItemGroup>

</Project>
